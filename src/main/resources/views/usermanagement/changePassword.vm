#define ($body-html)
<div class="container">

    <div class="row">

        <div class="col-sm-6 col-sm-offset-3">
            <h1>Change password</h1>
            <h4 style="margin-bottom: 30px">for $person.email</h4>
            <form role="form" action="/users/changepassword/$person.id" method="post" class="red-form">
                <div class="form-group">
                    <label for="password">Your new password</label>
                    <input type="password" class="form-control" placeholder="password" name="password" id="password">
                    #set($varname='changePasswordUser.password') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="passwordCheck">Repeat your new password</label>
                    <input type="password" class="form-control" placeholder="password" name="passwordCheck" id="passwordCheck">
                    #set($varname='changePasswordUser.passwordcheck') #parse("/views/snippets/formError.vm")
                    #set($varname='changePasswordUser') #parse("/views/snippets/formError.vm")
                </div>
                <input type="hidden" name="id" id="id" value="$person.id">
                #set($varname='changePasswordUser.id') #parse("/views/snippets/formError.vm")
                <input type="hidden" name="email" id="email" value="$person.email">
                #set($varname='changePasswordUser.email') #parse("/views/snippets/formError.vm")
                <button type="submit" class="btn btn-primary">Change</button>
            </form>

        </div>
    </div>
</div>
#end

#parse('/views/mot-main.html')