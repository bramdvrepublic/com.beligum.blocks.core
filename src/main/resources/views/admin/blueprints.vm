#define($body-html)
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">$I18N.getMessage("blueprintsTitle")</h1>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    $I18N.getMessage("blueprintName")
                </th>
                <th>
                    $I18N.getMessage("blueprintPageTemplate")
                </th>
                <th>
                    $I18N.getMessage("blueprintPageBlock")
                </th>
                <th>
                    $I18N.getMessage("blueprintAddableBlock")
                </th>
                <th>
                    $I18N.getMessage("blueprintProperties")
                </th>
                <th>
                    $I18N.getMessage("blueprintScripts")
                </th>
                <th>
                    $I18N.getMessage("blueprintLinks")
                </th>
                <th>
                    $I18N.getMessage("blueprintLanguages")
                </th>
            </tr>
            </thead>
            <tbody>
                #foreach($blueprint in $blueprints)
                <tr>
                    <td>
                        <a href="/debug/blueprints/$blueprint.getName()">
                            $!blueprint.getName()
                        </a>
                    </td>
                    <td>
                        $!blueprint.getPageTemplateName()
                    </td>
                    <td>
                        $!blueprint.isPageBlock()
                    </td>
                    <td>
                        $!blueprint.isAddableBlock()
                    </td>
                    <td>
                        $!blueprint.getProperties().size()
                    </td>
                    <td>
                        $!blueprint.getScripts().size()
                    </td>
                    <td>
                        $!blueprint.getLinks().size()
                    </td>
                    <td>
                        #set($index = 0)
                        #foreach($language in $blueprint.getLanguages())
                            <a href="/debug/blueprints/$blueprint.getName()?lang=$language">
                                $language#set($index = $index + 1)#if($index < $blueprint.getLanguages().size()),#end
                            </a>
                        #end
                    </td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>
#end

#parse("/views/admin/main.html")