#define ($body-html)

    #if($RESPONSE && $RESPONSE.status!=200)
        #if($RESPONSE.status==400)
            #set($message = "Unable to login with the supplied input")
        #elseif($RESPONSE.status==401)
            #set($message = "Please log in first")
        #elseif($RESPONSE.status==403)
            #set($message = "You do not have permission to access the requested url. <br/>If you believe this to be an error, please contact your system administrator.")
        #end
        #if($message)
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 feedback-messages">
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        $message
                    </div>
                </div>
            </div>
        </div>
        #end
    #end

<div class="container user-login">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">

            <h1>Sign in </h1>

            <form role="form" method="POST" action="/users/login" class="red-form">
                <div class="form-group">
                    <label for="username">E-mail</label>
                    <input type="text" class="form-control" placeholder="Email" id="username" name="username" value="$!VALUES['username']">
                </div>
            ## don't show password-specific errors; it's a security breach

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" placeholder="Password" id="password" name="password" value="$!VALUES['password']">
                </div>
            ## don't show password-specific errors; it's a security breach

                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="rememberMe" value="true" value="$!VALUES['rememberMe']==true"> Remember me
                    </label>
                </div>

                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>

            <div class="footer">
                <hr>
                <a href="/users/forgotpassword">Forgot password?</a>
            </div>
        </div>
    </div>
</div>

#end

#parse('/views/usermanagement/main.html')