#define($header-scripts-extra)
<script src="/assets/javascripts/usermanagement/users.js" type="application/javascript" ></script>
<script src="/assets/libs/bootstrap/js/bootstrap.js" type="application/javascript" ></script>
#end

#define($buttonbar)
<div class="container buttonbar">
    <div class="col-md-2 pull-right">
        <a onclick="changeActiveView()">
            <button type="submit" form="userForm" class="btn btn-primary pull-right navbar-btn"id="changeActiveView">
                #if($showInactive)
                    Hide inactive
                #else
                    Show inactive
                #end
            </button>
        </a>
    </div>
    <div class="col-md-2 pull-right">
        <a href="/users/new">
            <button class="btn btn-primary pull-right navbar-btn">New user</button>
        </a>
    </div>
</div>
#end

#define ($body-html)
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table red-table">
                    <thead>
                    <tr>
                        <th><a href="/users?sort=firstName&inactive=$showInactive" class="sortlink" name="firstName">
                            First name
                            <span class="glyphicon glyphicon-chevron-up" #if($sortedBy != "firstName") style="opacity: 0" #end></span>
                        </a></th>
                        <th><a href="/users?sort=lastName&inactive=$showInactive" class="sortlink" name="lastName">
                            Last name
                            <span class="glyphicon glyphicon-chevron-up" #if($sortedBy != "lastName") style="opacity: 0" #end></span>
                        </a></th>
                        <th><a href="/users?sort=email&inactive=$showInactive" class="sortlink" name="email">
                            Email
                            <span class="glyphicon glyphicon-chevron-up" #if($sortedBy != "email") style="opacity: 0" #end></span>
                        </a></th>
                        <th><a href="/users?sort=subject&inactive=$showInactive" class="sortlink" name="subject">
                            Role
                            <span class="glyphicon glyphicon-chevron-up" #if($sortedBy != "subject") style="opacity: 0" #end></span>
                        </a></th>
                        <th>Active</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($user in $users)
                        <tr #if(!$user.subject.active)class="inactive"#end>
                            <td href="/users/$user.id" >$!user.firstName</td>
                            <td href="/users/$user.id" >$!user.lastName</td>
                            <td href="/users/$user.id" >$!user.email</td>
                            <td href="/users/$user.id" >$!user.subject.role</td>
                            <td href="/users/$user.id" ><span class="glyphicon glyphicon-ok"></span></td>
                            <td class="delete">
                                <a data-toggle="modal" data-target="#confirmModal" data-on-confirm="deleteUser($user.id)" data-title="Delete" data-body-text="Do you want to delete this user?" data-confirm-text="Delete">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    var showInactive = $showInactive;
</script>
#end

#parse('/views/mot-main.html')