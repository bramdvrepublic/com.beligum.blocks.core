#define($header-scripts-extra)
<script src="/assets/javascripts/deleted-page.js" type="application/javascript" ></script>
#end

#define($body-html)
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="block center-block">
                <h2>This page has been deleted.</h2>
                <h4>Do you want to create a new page or show the deleted version?</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-1 col-md-5">
            <div class="row">
                <div class="col-md-12 red-form" id="placeholder">
                    <div onclick="showSelection()" class="form-control btn btn-primary" >New page</div>
                </div>
            </div>
            <div class="row" id="class-selection">
                <div class="col-md-12">
                    <form method="POST" action="/entities" id="new" class="red-form">
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" form="new" class="form-control btn btn-primary">New page</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="page-url" value="$entityUrl"/>
                                <select name="page-class-name" class="form-control">
                                    #foreach($entityClass in $entityClasses)
                                        <option value="$entityClass.getName()">$!entityClass.getName()</option>
                                    #end
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <form method="POST" action="/entities/deletedversion" id="lastversion" class="red-form">
                <input type="hidden" name="page-url" value="$entityUrl"/>
                <button type="submit" class="form-control btn btn-primary" style="">Deleted version</button>
            </form>
        </div>
    </div>
</div>
#end

#parse("/views/mot-main.html")