#define ($body-html)
<div class="container">

    <div class="row">

        <div class="col-md-6 col-md-offset-3">

            <h1>New user</h1>

            <form role="form" method="POST" action="/users" class="red-form" id="userForm">
                <div class="form-group">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" placeholder="First name" name="firstName" id="firstName" value="$!newUser.firstName">
                    #set($varname='newUser.firstName') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" placeholder="Last name" name="lastName" id="lastName" value="$!newUser.lastName">
                    #set($varname='newUser.lastName') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" placeholder="Email" name="email" id="email" value="$!newUser.email">
                    #set($varname='newUser.email') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="role">Role</label>
                    <select class="form-control" name="role" id="role" value="$!newUser.role">
                        #foreach($role in $roles)
                            <option value="$role">$role</option>
                        #end
                    </select>
                    #set($varname='newUser.role') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password" value="">
                    #set($varname='newUser.password') #parse("/views/snippets/formError.vm")
                </div>

                <div class="form-group">
                    <label for="password">Confirm password</label>
                    <input type="password" class="form-control" placeholder="Re-enter password" name="passwordCheck" id="passwordCheck" value="">
                    #set($varname='newUser.passwordCheck') #parse("/views/snippets/formError.vm")
                    #set($varname='newUser') #parse("/views/snippets/formError.vm")
                </div>
            </form>
        </div>
    </div>
</div>
#end

#parse('/views/usermanagement/main.html')